{
  "name": "polkastats-backend-v3",
  "version": "3.0.0",
  "description": "PolkaStats backend v3",
  "main": "index.js",
  "scripts": {
    "docker": "cd docker/polkastats-backend && docker-compose up",
    "docker:win": "cd docker/polkastats-backend && docker-compose.exe up",
    "docker:clean": "bash docker/polkastats-backend/clean-polkastats-dockers",
    "docker:postgres": "cd docker/polkastats-backend && docker-compose.exe up postgres",
    "docker:listener": "cd docker/polkastats-backend && docker-compose.exe up listener",
    "docker:harvester": "cd docker/polkastats-backend && docker-compose.exe up harvester",
    "docker:substrate-node": "cd docker/polkastats-backend && docker-compose.exe up substrate-node",
    "docker:graphql-engine": "cd docker/polkastats-backend && docker-compose.exe up graphql-engine"  
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Colm3na/polkastats-backend-v3.git"
  },
  "keywords": [
    "blockchain",
    "polkadot",
    "kusama"
  ],
  "author": "PolkaStats Team",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Colm3na/polkastats-backend-v3/issues"
  },
  "homepage": "https://github.com/Colm3na/polkastats-backend-v3#readme",
  "dependencies": {
    "@polkadot/api": "^1.0.1",
    "pg": "^7.18.1"
  }
}
